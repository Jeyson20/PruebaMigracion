@model PruebaMigracion.Models.Equipo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>


<h2>Seguro que quieres eliminar este equipo ?</h2>
<hr />
<div>
    <span asp-validation-for="IdEquipo" class="text-danger"></span>
    <dl class="row center">
        <dt class = "col-sm-2">
            Nombre:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Pais
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pais)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class = "col-sm-2">
            Fecha Creación:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdEquipo" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
         <a class="btn btn-primary" asp-action="Index">Cancelar</a>
    </form>
</div>
