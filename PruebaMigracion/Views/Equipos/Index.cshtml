@model IEnumerable<PruebaMigracion.Models.Equipo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Listado de Equipos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Nuevo Equipo</a>
</p>
<div>
    <table class="table table-hover">
        <thead  class="thead-dark">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Nombre
                </th>
                 <th>
                    País 
                </th>
                 <th>
                    Estado
                </th>
                <th>
                   Fecha Creación
                </th>
                <th>
                   Acciones
                </th>
            </tr>
        </thead>
        <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.IdEquipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
           <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdEquipo">Editar</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdEquipo">Eliminar</a>
                <a class="btn btn-info"  asp-action="AllPlayers" asp-route-id="@item.IdEquipo">Jugadores</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
